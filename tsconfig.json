{
   "extends": "@tsconfig/recommended/tsconfig.json",
   "compilerOptions": {
      "jsx": "react-jsx",
      "target": "es2018",
      "module": "esnext",
      "lib": ["dom", "esnext"],
      "moduleResolution": "node",
      "baseUrl": "src",
      "rootDir": "src",
      "outDir": "dist",
      "declarationDir": "dist",
      "declaration": true,
      "sourceMap": true,
      "declarationMap": true,
      "allowSyntheticDefaultImports": true,
   },
   "include": [ "src" ],
   "exclude": [ "node_modules", "tests" ]
}