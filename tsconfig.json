{
   "extends": "@tsconfig/recommended/tsconfig.json",
   "compilerOptions": {
      "rootDir": "src/",
      "outDir": "dist/",
      "jsx": "react",
      "module": "esnext",
      "lib": ["dom", "esnext"],
      "moduleResolution": "node",
      "declaration": true,
      "sourceMap": true,
      "declarationMap": true,
      "allowSyntheticDefaultImports": true,
   },
   "include": [ "src" ],
   "exclude": [ "node_modules", "tests" ]
}